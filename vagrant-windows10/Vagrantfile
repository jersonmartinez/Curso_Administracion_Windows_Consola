# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  # Selecciona el box de Windows 10 más popular y mantenido
  config.vm.box = "gusztavvargadr/windows-10"
  # Usa la versión más reciente compatible con VirtualBox
  config.vm.box_version = "2506.0.0"

  # Provider VirtualBox
  config.vm.provider "virtualbox" do |vb|
    vb.name = "Win11-BatchLab"
    vb.memory = 16384 # 16GB RAM
    vb.cpus = 4 # Suficiente procesador
    vb.customize ["modifyvm", :id, "--vram", "128"]
    vb.customize ["modifyvm", :id, "--ioapic", "on"]
    vb.customize ["modifyvm", :id, "--graphicscontroller", "vmsvga"]
    vb.customize ["modifyvm", :id, "--hdd", "40GB"]
  end


  # Red privada para acceso local
  config.vm.network "private_network", type: "dhcp"

  # Habilitar acceso RDP (puerto 3389)
  config.vm.network "forwarded_port", guest: 3389, host: 3389, auto_correct: true

  # Sin carpetas compartidas por defecto (seguridad)
  config.vm.synced_folder ".", "/vagrant", disabled: true

  # Provisión básica: crea usuario seguro para pruebas
  config.vm.provision "shell", inline: <<-SHELL
    net user batchtester P@ssw0rd123 /add
    net localgroup Administradores batchtester /add
    net user batchtester /active:yes
    net user batchtester /passwordchg:no
    net user batchtester /passwordreq:yes
  SHELL

  # Provisión adicional: habilita PowerShell y copia scripts
  config.vm.provision "file", source: "../scripts", destination: "C:/BatchScripts"
end
